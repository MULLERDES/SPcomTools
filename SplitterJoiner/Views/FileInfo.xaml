<UserControl x:Class="SplitterJoiner.Views.FileInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SplitterJoiner.Views"
             xmlns:mt ="clr-namespace:SplitterJoiner.Models"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="4" >filename:</TextBlock>
                <TextBlock Margin="4" Text="{Binding FileNameWothoutPath}"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="4" >bytes:</TextBlock>
                <TextBlock Margin="4" Text="{Binding LengthInBytes}"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="4" >KB:</TextBlock>
                <TextBlock Margin="4" Text="{Binding LengthInKBytes}"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="4" >MB:</TextBlock>
                <TextBlock Margin="4" Text="{Binding LengthInMBytes}"></TextBlock>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
